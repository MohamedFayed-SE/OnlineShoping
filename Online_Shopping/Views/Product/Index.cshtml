

@model IEnumerable<Online_Shopping.DTOs.ProductDTo>;

<h1>Category</h1>
<hr>
<a asp-action="Create" class="btn btn-info px-4 mb-2">Create</a>
<div class="col-md-12 bg-white border shadow-lg p-2">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th scope="col"># ID</th>
                <th scope="col">Arabic Name</th>
                <th scope="col">Latin Name</th>
                <th scope="col">Imge</th>
                <th scope="col">Category Name</th>
                <th scope="col">SubCategory Name</th>

            </tr>
        </thead>
        <tbody id="TableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.LocalName</td>
                    <td>@item.LatinName</td>
                       <td>
                           <img src="~/imges/@item.ImgeName"class="w-25 rounded-circle"/>

                       </td>
                    <td>@item.SubCategory?.Name</td>
                 


                </tr>
            }
            
        </tbody>

       

</div>

 <div>
    <button class="btn btn-outline-success" onclick="NextPage(@ViewBag.listCount)">Next</button>
    <button class="btn btn-outline-info" onclick="PreviousPage()">Previous</button>
 </div>
 @section Scripts {
     <script src="~/js/TablesActions.js"></script>
 }




